{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "declaration": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist-ts",
    "paths": {
      "@/*": [ "./src/*" ]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
